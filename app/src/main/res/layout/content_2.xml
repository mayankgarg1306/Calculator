<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    android:orientation="vertical"
    android:baselineAligned="false"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.calculator.hide.vault.Main2Activity"
    tools:showIn="@layout/activity_main2">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.02"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/button13"
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="40dip"
            android:layout_marginRight="40dip"
            android:layout_centerVertical="true"
            android:background="@drawable/viewfile"
            android:onClick="image"
            android:textColor="#fff"
            android:textColorLink="#fff" />

        <Button
            android:id="@+id/opendialog"
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dip"
            android:layout_marginTop="30dip"
            android:background="@drawable/lock"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dip" />

        <Button
            android:id="@+id/Unhide"
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dip"
            android:layout_marginRight="40dp"
            android:layout_above="@+id/textView5"
            android:background="@drawable/unlock"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dip"
            android:layout_marginEnd="20dip"
            android:layout_below="@+id/opendialog"
            android:text="Hide Files"
            android:textColor="#fff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dip"
            android:layout_marginRight="20dip"
            android:text="Unhide Files"
            android:textColor="#fff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/button13"
            android:layout_alignStart="@+id/button13"
            android:layout_below="@+id/button13"
            android:text="View Files"
            android:textColor="#fff"
            android:textSize="20sp" />

    </RelativeLayout>
    <com.google.android.gms.ads.AdView
        android:id="@+id/banner_AdView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id" />

</LinearLayout>
