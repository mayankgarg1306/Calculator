<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF59D"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="com.calculator.hide.vault.MainActivity">

    <RelativeLayout
        android:id="@+id/bigGreenBox"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:background="#FFF"
        android:orientation="horizontal"
        android:layout_weight="4"
        android:weightSum="1">

        <TextView
            android:id="@+id/editText"
            android:layout_width="0dip"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/textView2"
            android:layout_gravity="bottom"
            android:layout_toLeftOf="@+id/buttoncl"
            android:layout_toStartOf="@+id/buttoncl"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="bottom"
            android:maxLength="40"
            android:maxLines="3"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="40sp"
            tools:inputType="text" />

        <Button
            android:id="@+id/buttoncl"
            style="@style/yamuna"
            android:layout_width="65dip"
            android:layout_height="90dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="bottom"
            android:background="@drawable/clear"
            android:onClick="onbackspace"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:background="?attr/colorButtonNormal"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bigBlueBox"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="6"
        android:background="#FFF59D"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FFF59D"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button7"
                style="@style/yamuna"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple1"
                android:onClick="onClick"
                android:text="7"
                android:textAllCaps="false"
                android:textSize="40sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button8"
                style="@style/yamuna"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple1"
                android:onClick="onClick"
                android:text="8"
                android:textAllCaps="false"
                android:textSize="40sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button9"
                style="@style/yamuna"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple1"
                android:onClick="onClick"
                android:text="9"
                android:textAllCaps="false"
                android:textSize="40sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttondivide"
                style="@style/ganga"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple"
                android:onClick="onClickOperator"
                android:text="รท"
                android:textAllCaps="false"
                android:textSize="40sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonobracket"
                style="@style/ganga"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple2"
                android:onClick="onClickclear"
                android:text="AC"
                android:textAllCaps="false"
                android:textSize="35sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:background="@android:color/black"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button4"
                style="@style/yamuna"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple1"
                android:onClick="onClick"
                android:text="4"
                android:textAllCaps="false"
                android:textSize="40sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button5"
                style="@style/yamuna"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple1"
                android:onClick="onClick"
                android:text="5"
                android:textAllCaps="false"
                android:textSize="40sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button6"
                style="@style/yamuna"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple1"
                android:onClick="onClick"
                android:text="6"
                android:textAllCaps="false"
                android:textSize="40sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonmultiply"
                style="@style/ganga"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple"
                android:onClick="onClickOperator"
                android:text="ร"
                android:textAllCaps="false"
                android:textSize="40sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonpower"
                style="@style/ganga"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple"
                android:onClick="onClickOperator"
                android:text="^"
                android:textAllCaps="false"
                android:textSize="40sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bigDarkGreen"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="2"
            android:background="@android:color/black"
            android:orientation="horizontal"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="@android:color/black"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@android:color/black"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button1"
                        style="@style/yamuna"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/ripple1"
                        android:onClick="onClick"
                        android:text="1"
                        android:textAllCaps="false"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/button2"
                        style="@style/yamuna"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/ripple1"
                        android:onClick="onClick"
                        android:text="2"
                        android:textAllCaps="false"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/button3"
                        style="@style/yamuna"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/ripple1"
                        android:onClick="onClick"
                        android:text="3"
                        android:textAllCaps="false"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/buttonsubtract"
                        style="@style/ganga"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/ripple"
                        android:onClick="onClickOperator"
                        android:text="-"
                        android:textAllCaps="false"
                        android:textSize="40sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@android:color/black"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button0"
                        style="@style/yamuna"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="@drawable/ripple1"
                        android:onClick="onClick"
                        android:text="0"
                        android:textAllCaps="false"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/buttondecimal"
                        style="@style/yamuna"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/ripple1"
                        android:onClick="onClick"
                        android:text="."
                        android:textAllCaps="false"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/buttonadd"
                        style="@style/ganga"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/ripple"
                        android:onClick="onClickOperator"
                        android:text="+"
                        android:textAllCaps="false"
                        android:textSize="40sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>


            <Button
                android:id="@+id/buttonequal"
                style="@style/ganga"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple"
                android:onClick="onClickEqual"
                android:text="="
                android:textAllCaps="false"
                android:textSize="40sp"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>
</LinearLayout>


